<tr>
  <td>
    <%= link_to user_word_category.user_category.name, user_word_category.user_category %>
  </td>
  <td>
    <div class="delete-button">
      <div class="btn-group">
        <%= link_to(user_word_category, :class => "btn btn-danger", :method => :delete, :confirm => 'You sure?', :title => 'Delete category') do %>
            <i class="icon-trash icon-white"></i> Delete
        <% end %>

        <a class="btn btn-danger dropdown-toggle" data-toggle="dropdown" href="#">
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to "Delete link to category", user_word_category, :method => :delete, :confirm => 'You sure?', :title => 'Unlink word from category' %>
          </li>
          <li>
            <%= link_to "Delete whole category \"#{user_word_category.user_word.word.text}\"", user_word_category, :method => :delete, :confirm => 'You sure?', :title => 'title' %>
          </li>
        </ul>
      </div>
    </div>
  </td>
</tr>
