<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <%= form_for(@category, :form_class => "well") do |f| %>
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
          <label class="checkbox">
            <%= f.check_box :is_default %>
            Default
          </label>
        </div>
        <div class="center">
          <%= f.submit "Update", :name => "btn_update", :class => "btn btn-primary" %>
          <%= f.submit "Cancel", :name => "btn_cancel", :class => "btn btn-default" %>
        </div>
    <% end %>
  </div>
</div>