<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@category, :form_class => 'well') do |f| %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
        <label class="checkbox">
          <%= f.check_box :is_default %>
          Default
        </label>
      </div>
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
      <%= f.submit 'Cancel', :class => 'btn btn-default' %>
    <% end %>
  </div>
</div>