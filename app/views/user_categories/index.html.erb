<div class="row" id="word_title">
  <div class="span12">
    <h1>Categories</h1>
  </div>
</div>

<div class="row">
  <%= form_tag :method => :post, :action => :update_defaults do %>
    <table class="table table-striped">
      <tfoot>
      <tr>
        <td colspan="3">
          <%= submit_tag "Save" %>
        </td>
      </tr>
      </tfoot>
      <tbody>

      <% @categories.each() do |category| %>
        <tr>
          <td>
            <%= check_box_tag("id#{category.id}", "", category.is_default) %>
          </td>
          <%= render category %>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
</div>