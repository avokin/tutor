<div class="row">
  <div class="span3">
    <h1><%= @user_word.word.text %></h1>
  </div>
  <div class="span3">
    <div class="edit-button">
      <div class="btn-group">
        <%= link_to(edit_user_word_path(@user_word), :class => "btn") do %>
            <i class="icon-edit"></i> Edit
        <% end %>

        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to  "Rename the word", edit_user_word_path(@user_word) %>          </li>
          <li>
            <%= link_to  "Reset training status", edit_user_word_path(@user_word) %>
          </li>
        </ul>
      </div>
    </div>
  </div>


  <div class="span3">
    learned: <%= word_status(@user_word) * 100 %>%
  </div>
</div>


<%= form_for(@user_word) do |f| %>
    <div class="row">
      <div class="span6" id="translations">
        <h4>
          Translations
        </h4>

        <table class="table table-striped">
          <tbody>
          <%= render @user_word.translations %>
          </tbody>
        </table>

        <div class="block-inline">
          <%= text_field_tag :translation_0, '', :autocomplete => search_autocomplete_word_text_path %>
        </div>
      </div>

      <div class="span6" id="synonyms">
        <h4>
          Synonyms
        </h4>
        <table class="table table-striped">
          <tbody>
          <%= render @user_word.synonyms %>
          </tbody>
        </table>
        <div class="block-inline">
          <%= text_field_tag :synonym_0, '', :autocomplete => search_autocomplete_word_text_path %>
        </div>
      </div>
    </div>

    <hr/>
    <div class="row">
      <div class="span6" id="categories">

        <h4>
          Categories
        </h4>
        <%= render @user_word.user_word_categories %>
        <input type="button" value="Add category" onclick="addCategory();"/>
      </div>
    </div>
    <%= f.submit "Save", :class => "btn-primary" %>
<% end %>

