<div class="row with-bottom-margin">
  <div class="span12">
    <div class="box forms-box form-horizontal">
      <div class="control-group">
        <label class="control-label">Part of speech:</label>

        <div class="controls">
          <%= f.select(:type_id, german_part_of_speech, {}, {:class => "dropdown_small"}) %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label">Gender:</label>

        <div class="controls">
          <%= f.select(:custom_int_field1, german_noun_gender_options, {}, {:class => "dropdown_small"}) %>
          <%= @user_word.text %>
        </div>
      </div>

      <div class="without-bottom-margin control-group">
        <label class="control-label">Plural:</label>

        <div class="controls">
          <%= f.text_field(:custom_string_field1, :placeholder => "Plural form") %>
        </div>
      </div>
    </div>
  </div>
</div>
