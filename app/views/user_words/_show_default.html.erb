<div class="row with-bottom-margin" id="page_title">
  <div class="span1">
    <span class="linguistics">
      <%= @user_word.language.name %>
    </span>
  </div>

  <div class="span1">
  </div>

  <div class="span4 offset3 center-aligned">
    <span class="user_data big-text"><%= @user_word.text %></span>
  </div>

  <div class="offset2 span2 right-aligned">
    <%= button_to "Edit", edit_user_word_path(@user_word), :method => :get, :form_class => "inline", :class => "btn without-bottom-margin" %>
    <%= button_to "Delete", @user_word, :form_class => "inline", :class => "btn btn-danger without-bottom-margin", :method => :delete, :confirm => "You sure?", :title => "Delete word?" %>
  </div>
</div>
