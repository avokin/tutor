<div class="row with-bottom-margin" id="page_title">
  <div class="span1">
    <span class="linguistics">
      <%= @user_word.language.name %>
    </span>
  </div>

  <div class="span1">
    <span class="linguistics">Noun</span>
  </div>

  <div class="span4 offset2 center-aligned">
    <span class="linguistics">
      <%= get_german_gender_by_number(@user_word.custom_int_field1) %>
    </span>
    <span class="user_data big-text"><%= @user_word.text %></span>
    <span class="linguistics">
      <%= get_german_plural_form(@user_word) %>
    </span>
  </div>

  <div class="offset2 span2 right-aligned">
    <%= button_to "Edit", edit_user_word_path(@user_word), :method => :get, :form_class => "inline", :class => "btn without-bottom-margin" %>
    <%= button_to "Delete", @user_word, :form_class => "inline", :class => "btn btn-danger without-bottom-margin", :method => :delete, :confirm => "You sure?", :title => "Delete word?" %>
  </div>
</div>

<div class="row with-bottom-margin">
  <div class="span12">
    <div class="box forms-box form-horizontal">
      <div class="control-group">
        <label class="control-label">Part of speech:</label>

        <div class="controls">
          <span class="linguistics">
            Noun
          </span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label">Gender:</label>

        <div class="controls">
          <%= get_german_gender_by_number(@user_word.custom_int_field1) %>
          <%= @user_word.text %>
        </div>
      </div>

      <div class="without-bottom-margin control-group">
        <label class="control-label">Plural:</label>

        <div class="controls">
          <%= get_german_plural_form(@user_word) %>
        </div>
      </div>
    </div>
  </div>
</div>


