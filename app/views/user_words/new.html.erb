<%= form_for(@user_word) do |f| %>
    <div class="row">
      <div class="span2">
        <%= f.hidden_field :text %>
        <%= f.select(:language_id, target_language_select, {}, {:class => "dropdown_middle"}) %>
      </div>
      <div class="span2 offset3">
        <h1 class="without-bottom-margin"><span class="user_data"><%= @user_word.text %></span></h1>
      </div>
    </div>

    <%= edit_word_customization(f) %>

    <div class="row with-bottom-margin">
      <div class="span12">
        <div class="box translations-box form-horizontal">
          <div class="control-group with-small-bottom-margin">
            <label class="control-label" for="suggested_translation_0">Translations:</label>

            <div class="controls">
              <% (0..@user_word.direct_translations.length - 1).each do |i| %>
                  <%= check_box_tag("suggested_translation_#{i}", @user_word.direct_translations[i].related_user_word.text, i == 0) %>
                  <%= @user_word.direct_translations[i].related_user_word.text %>
              <% end %>
            </div>
          </div>

          <div id="translations" class="without-bottom-margin control-group">
            <label class="control-label" for="translation_0">Add translations:</label>

            <div class="controls">
              <input data-autocomplete="/search/autocomplete_user_word_text" id="translation_0" name="translation_0" type="text" value=""/>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row with-bottom-margin">
      <div id="synonyms" class="span6">
        <div class="box synonyms-box form-horizontal">

          <div class="control-group with-small-bottom-margin">
            <label class="control-label" for="suggested_translation_0">Synonyms:</label>

            <div class="controls">
              <% (0..@user_word.direct_synonyms.length - 1).each do |i| %>
                  <%= check_box_tag("synonyms_#{i}", @user_word.direct_synonyms[i].related_user_word.text, i == 0) %>
                  <%= @user_word.direct_synonyms[i].related_user_word.text %>
              <% end %>
            </div>
          </div>


          <div class="control-group with-small-bottom-margin">
            <label class="control-label" for="synonym_0">Add synonym:</label>

            <div class="controls">
              <input data-autocomplete="/search/autocomplete_user_word_text" id="synonym_0" name="synonym_0" type="text" value=""/>
            </div>
          </div>
        </div>
      </div>

      <div id="categories" class="span6">
        <div class="box categories-box form-horizontal">
          <div class="control-group with-small-bottom-margin">
            <label class="control-label" for="category_0">Categories:</label>

            <div class="controls">
              <input data-autocomplete="/search/autocomplete_user_category_name" id="category_0" name="category_0" type="text" value=""/>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="span2 offset5 center">
        <%= f.submit :class => "btn btn-primary", :value => "Save word" %>
      </div>
    </div>
<% end %>
<%= set_focus_to_id('translation_0') %>
