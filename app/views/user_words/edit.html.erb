<%= form_for(@user_word) do |f| %>
    <div class="row">
      <div class="span2">
        <%= f.hidden_field :text %>
        <%= f.select(:language_id, target_language_select, {}, {:class => "dropdown_middle"}) %>
      </div>
      <div class="span2 offset3">
        <h1 class="without-bottom-margin"><span class="user_data"><%= link_to @user_word.text, @user_word %></span></h1>
      </div>
    </div>

    <%= edit_word_customization(f) %>

    <div class="row with-bottom-margin">
      <div class="span6">
        <div id="translations" class="box translations-box form-horizontal">
          <table class="table table-striped without-bottom-margin">
            <tbody>
            <% if @user_word.translations.length > 0 %>
                <%= render :partial => "word_relations/edit_word_relation", :collection => @user_word.translations %>
            <% else %>
                <tr>
                  <td colspan="3">Empty</td>
                </tr>
            <% end %>
            <tr>
              <td>
                <%= autocomplete_field_tag :translation_0, '', search_autocomplete_user_word_text_path, :placeholder => "You could add translations here" %>
              </td>
              <td></td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div id="synonyms" class="span6">
        <div id="synonyms" class="box synonyms-box form-horizontal">
          <table class="table table-striped without-bottom-margin">
            <tbody>
            <% if @user_word.synonyms.length > 0 %>
                <%= render :partial => "word_relations/edit_word_relation", :collection => @user_word.synonyms %>
            <% else %>
                <tr>
                  <td colspan="3">Empty</td>
                </tr>
            <% end %>
            <tr>
              <td>
                <%= autocomplete_field_tag :synonym_0, '', search_autocomplete_user_word_text_path, :placeholder => "You could add synonyms here" %>
              </td>
              <td></td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="row with-bottom-margin">
      <div class="span12" id="categories">
        <div class="category_list">
          <%= render :partial => "user_word_categories/edit_user_word_category", :collection => @user_word.user_word_categories %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="span4 new-category">
        <%= autocomplete_field_tag :category_0, '', search_autocomplete_user_category_name_path, :placeholder => "You could add categories here" %>
      </div>
    </div>

    <div class="row">
      <div class="span2 offset5 center">
        <%= f.submit :class => "btn btn-primary", :value => "Save word" %>
      </div>
    </div>
<% end %>
<%= set_focus_to_id('translation_0') %>
