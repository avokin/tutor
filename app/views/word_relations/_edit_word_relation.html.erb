<% user_word = @user_word.nil? ? edit_word_relation.related_user_word : (@user_word.id == edit_word_relation.source_user_word.id) ? edit_word_relation.related_user_word : edit_word_relation.source_user_word  %>
<tr>
  <td>
    <h3>
      <%=link_to user_word.text, user_word%>
    </h3>
  </td>
  <td>
    <%= check_box_tag get_relation_name(edit_word_relation, edit_word_relation_counter), user_word.text,  edit_word_relation_counter == 0 %>
  </td>
</tr>
