<% user_word = @user_word.nil? ? word_relation.related_user_word : (@user_word.id == word_relation.source_user_word.id) ? word_relation.related_user_word : word_relation.source_user_word  %>
<tr>
  <td>
    <h3>
      <%=link_to user_word.word.text, user_word%>
    </h3>
  </td>
  <td>
    <div class="progress">
      <div class="bar" style="width: 60%;"></div>
    </div>
  </td>
  <td>
    <div class="btn-group">
      <%= link_to(word_relation, :class => "btn", :method => :delete, :confirm => 'You sure?', :title => 'title') do %>
          <i class="icon-trash"></i> Delete
      <% end%>

      <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "Delete #{get_relation_name(word_relation)}", word_relation ,:method => :delete, :confirm => 'You sure?', :title => 'title' %>
        </li>
        <li>
          <%= link_to "Delete word '#{word_relation.related_user_word.word.text}'", {:controller => :word_relations ,:action => :destroy_with_related_word, :id => word_relation.id}, {:method => :delete, :confirm => 'You sure?', :title => 'title'} %>
        </li>
      </ul>
    </div>
  </td>
</tr>
