<div class="row" id="page_title">
  <div class="span12">
    <h1>Sign in, please</h1>
  </div>
</div>


<div class="row">
  <div class="offset4 span4">

    <%= form_for(:session, :url => sessions_path) do |f| %>
      <div class="input-prepend">
        <span class="add-on"><i class="icon-envelope"></i></span><%= f.text_field :email, :size => 30, :placeholder => "Email" %>
      </div>

      <div class="input-prepend">
        <span class="add-on"><i class="icon-lock"></i></span><%= f.password_field :password, :placeholder => "Password" %>
      </div>

      <div class="center">
        <%= f.submit "Sign in", :class => "btn btn-primary" %>
      </div>
    <% end %>

    <div class="center">
      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
</div>
