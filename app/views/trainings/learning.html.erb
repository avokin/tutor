<div class="row" id="page_title">
  <div class="col-md-12">
    <h1><%= @title %></h1>
  </div>
</div>

<div class="row" id="word_row">
  <div class="col-md-6 col-md-offset-3 center" >
    <span class="linguistics" id="word_prefix">

    </span>
    <span class="user_data big-text center" id="word_text">
    </span>
    <span class="linguistics" id="word_suffix">

    </span>

  </div>
</div>
<div class="row" id="word_row">
  <div class="col-md-6 col-md-offset-3" >
    <h2 class="user_data center" id="word_translations">
    </h2>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3 center">
    <button class="btn btn-default" onclick="selectItem(index - 1)">Prev</button>
    <button class="btn btn-default" onclick="selectItem(index + 1)">Next</button>
  </div>
</div>

<script type="text/javascript">
    words = [
        <% @words.each do |w| %>
          <%= render :partial => learning_word_customization(w), locals: {word: w} %>
        <% end %>
    ];

    index = 0;
    function selectItem(i) {
        if (i >= words.length) {
            i = 0;
        }
        if (i < 0) {
            i = words.length - 1;
        }
        index = i;
        $("#word_text").prop('href', '/user_words/' + words[index][0]);
        $("#word_text").text(words[index][1]);
        $("#word_translations").text(words[index][2]);

        $("#word_prefix").text(words[index][3]);
        $("#word_suffix").text(words[index][4]);
    }
    selectItem(0);
</script>

