<div class="row" id="page_title">
  <div class="col-md-12">
    <h1><%= @title %></h1>
  </div>
</div>

<%= render partial: 'training_placeholder' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 center">
    <button class="btn btn-default" onclick="selectLearningWord(index - 1)">Prev</button>
    <button class="btn btn-default" onclick="selectLearningWord(index + 1)">Next</button>
  </div>
</div>

<script type="text/javascript">
    words = [
        <% @words.each do |w| %>
          <%= render :partial => learning_word_customization(w), locals: {word: w} %>,
        <% end %>
    ];

    selectLearningWord(0);

    function onLeftPressed() {
        selectLearningWord(index - 1)
    }
    function onRightPressed() {
        selectLearningWord(index + 1)
    }
    document.keyboardProcessor.onLeftPressed = onLeftPressed;
    document.keyboardProcessor.onRightPressed = onRightPressed;
</script>

