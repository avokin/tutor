<div class="row" id="page_title">
  <div class="span12">
    <h1>Training</h1>
  </div>
</div>

<div class="row">
  <div class="span3 biglink">
    <%= link_to @user_word do %>
      <%= @user_word.word.text %>
    <% end %>
  </div>

  <div class="span4">
    <%= form_tag check_training_path do %>
      <table class="table table-striped">
        <tfoot>
        <tr>
          <td>
            <%= submit_tag "Check", :class => "btn" %>
            <%= submit_tag "Don't remember'", :class => "btn" %>
            <%= submit_tag "Skip", :class => "btn" %>
          </td>
        </tr>
        </tfoot>
        <tbody>
        <% (0..@user_word.direct_translations.length - 1).each do |i| %>
          <tr>
            <td>
              <div class="<%= @answer_classes[@variants[i]] %>">
                <%= text_field_tag "variant_#{i}", @variants[i] %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>