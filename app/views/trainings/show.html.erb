<div class="row" id="page_title">
  <div class="span12">
    <h1>Training</h1>
  </div>
</div>

<div class="row">
  <div id="trainingContent" class="offset2 span4">
    <div class="row-fluid">
      <div class="span12">Your variants</div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <table id="attemptTable" class="table table-striped">
          <tfoot>
          <tr>
            <td>
            </td>
            <td></td>
          </tr>
          </tfoot>
          <tbody>

          </tbody>
        </table>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span4"><input type="button" class="btn btn-primary" id="btnCheck" value="Check"/></div>
      <div class="span4"><input type="button" class="btn" id="btnHint" value="Hint"/></div>
      <div class="span4"><input type="button" class="btn" id="btnSkip" value="Skip"/></div>
    </div>
    <table>
      <tbody>
      <tr>
        <td id="userWordCell" class="biglink">
          <%= link_to @user_word do %>
            <%= @user_word.text %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="span4">
    <div class="view view-fifth">
        <img src="/assets/Help.gif"/>

        <div id="hintBlock" class="mask">
        </div>
    </div>
  </div>
</div>

