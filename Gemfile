source 'http://rubygems.org'

gem 'rails', '3.2.0'

gem 'jquery-rails'
gem 'rails3-jquery-autocomplete'
gem 'nifty-generators'
gem 'will_paginate'
gem "nokogiri"

gem "bcrypt-ruby", :require => "bcrypt"

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :production do
  gem 'pg'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'sqlite3-ruby', :require => 'sqlite3'
end

group :test do
  gem "simplecov"

  gem 'cucumber'
  gem 'cucumber-rails'

  gem 'webrat'
  gem 'database_cleaner'
  gem 'factory_girl_rails'

  gem 'email_spec'
end
